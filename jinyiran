from io import StringIO

data = pd.read_csv(StringIO(raw_data), skipinitialspace=True)


data['<Date> <Time>'] = pd.to_datetime(data['<Date> <Time>'], format="%Y-%m-%d %H:%M:%S:%f")


time = data['<Date> <Time>']
bucket_temperature = data['<Bucket T>']


sample_name = "Bucket Temperature Sample"
measurement_date = "2019-10-09"


plt.figure(figsize=(10, 6))
plt.plot(time, bucket_temperature, marker='o', linestyle='-', color='b')


plt.title(f"Bucket Temperature over Time\n{sample_name}", fontsize=16, weight='bold')
plt.suptitle(f"Measurement Date: {measurement_date}", fontsize=10, y=0.94)
plt.xlabel("Time", fontsize=14)
plt.ylabel("Temperature (Â°C)", fontsize=14)


plt.grid(True)
plt.tight_layout()
plt.show()
